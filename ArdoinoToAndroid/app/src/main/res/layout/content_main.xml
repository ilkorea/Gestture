<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MyLinearLayout"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.soondori.log.ardoinotoandroid.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tvBtId"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:gravity="bottom"
        android:text="Bluetooth ID"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvRxData"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:background="#dddddddd"
        android:gravity="center_vertical"
        android:text="  Rx DATA" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/ready" />

    <com.soondori.log.ardoinotoandroid.OpenGLView
        android:id="@+id/visualizer"
        android:layout_width="200dp"
        android:layout_height="200dp" />

</LinearLayout>
